%h2 Browse Phones

-s = @sort_by.nil?  ?  "" : "Sort by #{@sort_by} "
%body="Showing #{(@current_page-1)*@num_per_page+1}-#{@current_page*@num_per_page} of #{@num_all} Results     " +  s

%table#phones
  %thead
    %tr
      %th
      %th=link_to "Brand", phones_path(:sort_by=>"brand")
      %th Name
      %th=link_to "Rating", phones_path(:sort_by=>"rating")
    %tbody
      - @phones.each do |phone|
        %tr
          %td= #(phone.imgurl)? (image_tag phone.imgurl) : ""
          %td= phone.brand
          %td= link_to "#{phone.name}", phone_path(phone)
          %td
            %h3= phone.overallRatings().to_s+"%"

= link_to_unless @current_page==1, "Previous Page", phones_path(:sort_by=>@sort_by, :page=>(@current_page-1) )

- @pages_bar.each do |p|
  = link_to_unless @current_page==p||p=="...",  "#{p}", phones_path(:sort_by=>@sort_by, :page=>p )

=link_to_unless @current_page==@num_pages,  "Next Page", phones_path(:sort_by=>@sort_by, :page=>(@current_page+1) )


