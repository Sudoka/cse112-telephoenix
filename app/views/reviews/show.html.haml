%h2 Review
%p= link_to "Back", phone_path(@review.phone)

%ul#review
  %li= @review.user.username.to_s + ": "
  %li= @review.rating.to_s
  %li= @review.review_text
  - if (session[:user] == @review.user || session[:user].user_type == ("admin" || "mod")) 
    = link_to "Edit", edit_phone_review_path(@review.phone, @review)


%table#comments
  %col{:width => "200px"}/
  %thead
    %tr
      %th= link_to "New Comment", new_phone_review_comment_path(@review.phone, @review)
    %tbody
      - @comments.each do |comment|
        %tr
          %td= session[:user].user_type.to_s
          %td
            = link_to comment.user.username.to_s, user_path(comment.user) 
            = "Says:"
          /%td= comment.comment_text
        %tr
        - if moder?
          %td= link_to "Delete User", :confirm => "Are you sure?", :method => :delete
        %tr  
          %td= "\t"
          %td= comment.comment_text
        
        - if moder?
          %td= "\t"
          %td= link_to "Edit Post"
          %td= link_to "Delete Post", :confirm => "Are you sure you want to delete this post" ,:method => :delete
